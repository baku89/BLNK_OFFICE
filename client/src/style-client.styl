@import "nib"

global-reset()

html, body
	width 100%
	height 100%
	margin 0
	border 0
	padding 0
	font-family: "Raleway", "HelveticaNeue", "Helvetica Neue", Helvetica, Arial, sans-serif
	overflow hidden

*, *:before, *:after
	box-sizing border-box

.settings
	position absolute
	background #eee
	width 300px
	height 100%
	overflow scroll
	left 0
	top 0
	padding 10px
	transform translate(0%, 0)
	z-index 100

	&.hidden
		transform translate(-100%, 0)

.item
	padding 10px 0


.viewer
	position relative
	width 100%
	height 100%

.canvas,
.canvas-image
	position absolute
	top 0
	left 0
	width 100%
	height 100%

.canvas
	background black

input[type=file]
	display block
	margin-top 10px

.input-image
	width 280px
	min-height 130px
	display block
	margin-left auto
	margin-right auto
	margin-bottom 20px
	background #999
