@import "nib"

global-reset()

html, body
	width 100%
	height 100%
	margin 0
	border 0
	padding 0
	font-family: "Raleway", "HelveticaNeue", "Helvetica Neue", Helvetica, Arial, sans-serif
	overflow hidden

*, *:before, *:after
	box-sizing border-box

.settings
	position absolute
	background #eee
	width 300px
	height 100%
	left 0
	top 0
	padding 10px
	transform translate(0%, 0)

	&.hidden
		transform translate(-100%, 0)

.item
	padding 10px 0

.canvas
	background black
	width 100%
	height 100%
